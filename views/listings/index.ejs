        <div class="container mt-4">
            <div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">
                <% for(let list of allListings){ %>
                    <div class="col">
                        <a href="/listings/<%= list._id %>" class="listing-link text-decoration-none"> 
                            <div class="card h-100 listing-card">  
                                <!-- Wishlist Icon -->
                                <div class="wishlist">
                                    <i class="fa-solid fa-heart"></i>
                                </div>
                                <!-- Image -->
                                <img src="<%= list.image.url %>" 
                                class="card-img-top" 
                                alt="list_image" 
                                style="height: 15rem; object-fit: cover;">
                                
                                <!-- Card Body -->
                                <div class="card-body">
                                    <p class="card-text">
                                        <b><%= list.title %></b>, <%= list.country %><br>
                                        &#8377; <%= list.price.toLocaleString("en-IN") %> per night
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
